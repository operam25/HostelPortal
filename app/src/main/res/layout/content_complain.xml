<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/noticeLayout1"
        android:clickable="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complain ID - XXXXXXXXXX"
            android:textColor="@color/text_color_main"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Complain Title comes here...."
            android:textColor="@color/text_color_main"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Complain short 2 line description comes here......................................"
            android:textColor="@color/text_color_main"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dated - dd/mm/yyyy  "
            android:gravity="end"
            android:textColor="@color/text_color_main"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceSmall"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/base_color_alt"
        />

</LinearLayout>