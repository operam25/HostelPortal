<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/noticeLayout1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dated - dd/mm/yyyy"
            android:id="@+id/timeStampNotice"
            android:textColor="@color/text_color_main"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/headerNotice"
            android:text="Notification Title comes here...."
            android:textColor="@color/text_color_main"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/detailsNotice"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Notification short 2 line description comes here......................................"
            android:textColor="@color/text_color_main"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted by - XXXXXXXX XXXXXXX  "
            android:id="@+id/notifierNotice"
            android:gravity="end"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/text_color_main"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceSmall"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@color/base_color_alt"
        />

</LinearLayout>